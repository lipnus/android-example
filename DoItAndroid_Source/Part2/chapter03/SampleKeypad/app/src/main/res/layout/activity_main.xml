		android:layout_height="wrap_content"
		android:padding="10dp"
		android:textSize="16dp"
		android:inputType="textPassword"
		/>
	
	<TextView
		android:id="@+id/caption05"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ff0000ff"
