<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //글쓰는부분
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목살스테이크샐러드"
                android:textSize = "21dp"/>

            <TextView
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매스플레이트"
                android:textSize="11dp"/>

            <View
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d4d4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/review_eT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="메뉴에 대한 리뷰를 작성해주세요!"
                    android:textColor="#646464"
                    android:textSize="7pt"
                    android:background ="@null"/>

            </LinearLayout>


            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d4d4"/>

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#dcdada"
                android:onClick="onClick_selectImage"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디:808   메뉴:목살스테이크샐러드   식당:매스플레이트"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:alpha="0.9"
        android:onClick="onClick_reviewUpload"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/check_btn"
        />
</FrameLayout>
