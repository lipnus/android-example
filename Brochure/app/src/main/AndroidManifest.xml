<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lipnus.brochure">

    //음성인식을 위한 퍼미션
    <uses-permission android:name="android.permission.INTERNET"/>;
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>;

    //카메라랑 파일입력출력
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Page1Activity"></activity>
        <activity android:name=".Page1Activity_2"></activity>
        <activity android:name=".Page1Activity_3"></activity>

        <activity android:name=".Page2Activity"></activity>
        <activity android:name=".Page2Activity_1Music"></activity>
        <activity android:name=".Page2Activity_2"></activity>
        <activity android:name=".Page2Activity_3"></activity>

        <activity android:name=".Page3Activity"></activity>
        <activity android:name=".Page3Activity_2"></activity>

        <activity android:name=".Page4Activity"></activity>

    </application>

</manifest>