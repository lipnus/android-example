<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="center|top"

    android:background="#082233">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/loginlogo"
        />





    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="8pt"
            android:textColor="#ffffff" />
        
        <EditText
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@null"
            android:id="@+id/edit_id"
            android:textSize="8pt"
            android:hint="아이디"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#5a6c77" />








    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW"
            android:textSize="8pt"
            android:textColor="#ffffff" />

        <EditText
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@null"
            android:textSize="8pt"
            android:id="@+id/edit_pw"
            android:hint="비밀번호"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#5a6c77" />






    <Button
        android:layout_marginTop="40dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/round_coner"
        android:onClick="onClick_Login"
        android:text="LOG IN"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="6pt"
        android:text="ID/PW를 잊으셨다면 010-8601-8905으로 연락주세요."/>
    
</LinearLayout>
