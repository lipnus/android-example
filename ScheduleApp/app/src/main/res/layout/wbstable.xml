<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/holiday_Tv"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="195dp"
            android:background="@drawable/lineone"
            android:textColor="#f15da0"
            android:text="오늘은 노는날"/>

        <Button
            android:id="@+id/plan_btn"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/planning_num"
            android:text = "1"
            android:gravity="center"/>

        <Button
            android:id="@+id/design_btn"
            android:layout_marginTop="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/design_num"
            android:text = "1"
            android:gravity="center"/>

        <Button
            android:id="@+id/develop_btn"
            android:layout_marginTop="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/development_num"
            android:text = "1"
            android:gravity="center"/>

        <Button
            android:id="@+id/test_btn"
            android:layout_marginTop="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/test_num"
            android:text = "1"
            android:gravity="center"/>



        <TextView
            android:id="@+id/wbs_date_Text"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#082233"
            android:text = "1"/>

        <TextView
            android:id="@+id/wbs_week_Text"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="#959494"
            android:text=""/>

        <TextView
            android:id="@+id/wbs_month_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""/>


    </LinearLayout>



</LinearLayout>