<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:gravity="center">

    <!--좌측이미지-->
    <FrameLayout
        android:id="@+id/left_menu_FrameLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/left_menu_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foodmenu1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/left_menu_nameTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#dbdbdb"
                android:text="로제 스파게티"/>

            <TextView
                android:id="@+id/left_menu_costTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#dbdbdb"
                android:text="S:9.9  L:18.0"/>

        </LinearLayout>


    </FrameLayout>

    <!--우측이미지-->
    <FrameLayout
        android:layout_marginLeft="10dp"

        android:id="@+id/right_menu_FrameLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/right_menu_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foodmenu2"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/right_menu_nameTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#dbdbdb"
                android:text="해산물 토마토 스파게티"/>

            <TextView
                android:id="@+id/right_menu_costTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#dbdbdb"
                android:text="S:9.9  L:18.0"/>
        </LinearLayout>

    </FrameLayout>

    <!--가로로 긴 이미지(기본값은 gone) -->
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/middle_menu_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/middle_menu_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foodmenu5"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

        <TextView
            android:id="@+id/middle_menu_nameTv"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#dbdbdb"
            android:text="까르보나라 해산물 스파게티"/>

        <TextView
            android:id="@+id/middle_menu_costTv"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#dbdbdb"
            android:text="S:9.9  L:18.0"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>